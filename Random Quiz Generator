for q in random.sample(questions, 3):
    user_answer = input(q["question"] + " ").lower()

    if user_answer == q["answer"]:
        print("âœ… Correct!")
        score += 1
    else:
        print("âŒ Wrong!")

print("-" * 30)
print(f"Your score: {score} / 3")
